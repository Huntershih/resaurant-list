<!-- search bar -->

<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurant/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{record}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<div class="container mt-5">
  {{#if restaurantList}}
  <div class="d-flex row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurantList}}
        <a href="/restaurant/{{ this.id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                {{ this.category }}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>
        <div class="justify-content-end my-2">
          <a href="/restaurant/{{ this.id }}/edit" class="border-bottom mx-2">Edit</a>
          <a href="/restaurant/{{ this.id }}/details" class="border-bottom mx-2">Details</a>
          <a href="/restaurant/{{ this.id }}/delete" class="border border-dark">Delete</a>
        </div>

        {{/each}}
      </div>
    </div>
  </div>
  {{else}}
  <div class="d-flex justify-content-center">
    <div class="column">
      <h3>搜尋的餐廳不存在</h3>
      <a href="/" class="d-flex justify-content-center pt-3">
        <button class="btn btn-major">回到首頁</button>
      </a>
    </div>
  </div>
  {{/if}}

</div>